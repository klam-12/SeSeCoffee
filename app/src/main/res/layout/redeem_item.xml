<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable
            name="orderItem"
            type="com.example.sesecoffee.model.OrderItem" />
        <variable
            name="order"
            type="com.example.sesecoffee.model.Order" />
    </data>
    <androidx.cardview.widget.CardView
        android:id="@+id/rewardItemCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:bottom="1dp"
            android:orientation="horizontal"
            android:top="1dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="100dp"
                android:layout_height="76dp"
                tools:srcCompat="@tools:sample/avatars" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="90dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:text="Americano"
                    android:textColor="@color/textColor"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:layout_marginBottom="5dp" />

                <TextView
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:text="HJihi"
                    android:textColor="@color/grey_"
                    android:textSize="12sp"
                    android:textStyle="normal" />

            </LinearLayout>

            <Button
                android:id="@+id/pointsBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:padding="2sp"
                android:paddingHorizontal="3sp"
                android:text="1234 pts"
                android:textSize="14sp"
                app:cornerRadius="50dp"
                tools:backgroundTint="@color/primary" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>
