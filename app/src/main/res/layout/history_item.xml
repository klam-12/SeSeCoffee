<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="order"
            type="com.example.sesecoffee.model.Order" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/rewardItemCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingVertical="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="100dp"
                    android:text="@{order.formatTimestamp(order.createAt)}"
                    android:textColor="@color/order_inactive"
                    android:textSize="15sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="289dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@{`&lt;&lt; ` + order.comment + ` products...`}"
                    android:textColor="@color/order_inactive" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:bottom="1dp"
                android:orientation="horizontal"
                android:top="2dp">

                <LinearLayout
                    android:layout_width="222dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/latte"
                        android:drawablePadding="8dp"

                        android:text="@{order.phoneNumber}"
                        android:textColor="@color/textColor"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="22dp"
                        android:layout_marginTop="3dp"
                        android:text="@{`x ` + order.userId}"
                        android:textColor="@color/order_inactive"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:drawablePadding="8dp"
                        android:drawableStart="@drawable/address"
                        android:text="@{order.address}"
                        android:textColor="@color/textColor"
                        android:textSize="15sp"
                        android:textStyle="normal" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:layout_marginEnd="10dp"

                        android:layout_marginTop="3dp"
                        android:gravity="center_horizontal"
                        android:text="@{order.paymentMethod}"
                        android:textColor="@color/textColor"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/pointsBtn"
                        android:layout_width="74dp"
                        android:layout_height="37dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:backgroundTint="@color/primary"
                        android:padding="2sp"
                        android:paddingHorizontal="3sp"
                        android:text='Re-order'
                        android:textSize="12sp"
                        app:cornerRadius="50dp" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</layout>